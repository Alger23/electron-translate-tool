    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Electron: Main",
            "protocol": "inspector",
            "runtimeExecutable": "yarn",
            "runtimeArgs": [
                "start-main-debug"
            ]
            // "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron",
            // "runtimeArgs": [
            //     "--remote-debugging-port=9223",
            //     "."
            // ],
            // "windows": {
            //     "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron.cmd"
            // }
        },
        {
            "name": "Electron: Renderer",
            "type": "chrome",
            "request": "attach",
            "port": 9223,
            "webRoot": "${workspaceFolder}",
            "timeout": 30000
        }
    ],
    "compounds": [
        {
            "name": "Electron: All",
            "configurations": [
                "Electron: Main",
                "Electron: Renderer"
            ]
        }
    ]
